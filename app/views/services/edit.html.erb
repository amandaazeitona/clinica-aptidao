<%= form_with(model: @service, local: true) do |form| %>

  <table class="table">
    <tr>
      <th> Nome </th>
      <th> Pre√ßo </th>
    </tr>
    <% @micro_services.each do |service| %>
      <%= form.fields_for :micro_services, service do |f| %>
        <tr>
          <td>
            <%= service.name %>
          </td>
