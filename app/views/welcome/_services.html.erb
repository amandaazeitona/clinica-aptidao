<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">SERVIÇOS</h2>
                <hr class="primary">
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6 text-center">
                <button type="button" class="service-button" data-toggle="modal" data-target="#myModal">
                        <div class="service-box">
                            <%= image_tag("primeira-habilitacao.jpg", :alt => "primeira habilitacao", :class => "service-image") %>
                            <h3>1ª Habilitação</h3>
                            <p class="text-muted">Todas as informações para quem deseja obter a 1ª habilitação.</p>
                        </div>
                </button>
                <div id="myModal" class="modal fade" role="dialog">
                        <div class="modal-dialog">
                      
                          <!-- Modal content-->
                          <div class="modal-content">
                            <div class="modal-header">
                              <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h3 class="modal-title">1ª HABILITAÇÃO</h3>
                            </div>
                            <div class="modal-body">
                              <p>Some text in the modal.</p>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                          </div>
                      
                        </div>
                      </div>
            </div>
            <div class="col-lg-4 col-md-6 text-center">
                <div class="service-box">
                        <%= image_tag("renovacao.jpg", :alt => "renovacao habilitacao", :class => "service-image") %>
                    <h3>Renovação da CNH</h3>
                    <p class="text-muted">Informação sobre os procedimentos para quem deseja renovar a habilitação.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 text-center">
                <div class="service-box">
                        <%= image_tag("mudanca.jpg", :alt => "adicionar habilitacao", :class => "service-image") %>
                    <h3>Mudança de categoria</h3>
                    <p class="text-muted">Informações sobre o procedimentot de mudança de categoria.</p>
                </div>
            </div>
            <div class="col-lg-4 col-lg-offset-2 col-md-6 text-center">
                <div class="service-box">
                        <%= image_tag("adicionar.png", :alt => "adicionar habilitacao", :class => "add-image") %>
                    <h3>Adição de categoria</h3>
                    <p class="text-muted">Procedimento para quem deseja adicionar uma nova categoria à sua habilitação.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-12 text-center">
                <div class="service-box">
                        <%= image_tag("credenciamento.jpg", :alt => "adicionar habilitacao", :class => "service-image") %>
                    <h3>Instrutor, Diretor de auto-escola e Examinador</h3>
                    <p class="text-muted">Informações para quem deseja se tornar um profissional do ramo de obtenção de habilitação.</p>
                </div>
            </div>
        </div>
    </div>
</section>

